{
  "name": "gymcore",
  "version": "1.0.0",
  "description": "Sistema de gestiÃ³n integral para gimnasios con arquitectura de microservicios",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm --parallel --stream -r run dev",
    "dev:all": "concurrently \"pnpm dev:gateway\" \"pnpm dev:auth\" \"pnpm dev:gyms\" \"pnpm dev:payments\" \"pnpm dev:frontend\"",
    
    "dev:gateway": "pnpm --filter api-gateway run start:dev",
    "dev:auth": "pnpm --filter auth-service run start:dev",
    "dev:gyms": "pnpm --filter gym-management-service run start:dev",
    "dev:payments": "pnpm --filter payment-service run start:dev",
    "dev:frontend": "pnpm --filter web-dashboard run dev",
    
    "build": "pnpm -r run build",
    "build:backend": "pnpm --filter \"./backend/apps/*\" run build",
    "build:frontend": "pnpm --filter web-dashboard run build",
    "build:gateway": "pnpm --filter api-gateway run build",
    "build:auth": "pnpm --filter auth-service run build",
    "build:gyms": "pnpm --filter gym-management-service run build",
    "build:payments": "pnpm --filter payment-service run build",
    
    "start": "pnpm --parallel --stream -r run start:prod",
    "start:gateway": "pnpm --filter api-gateway run start:prod",
    "start:auth": "pnpm --filter auth-service run start:prod",
    "start:gyms": "pnpm --filter gym-management-service run start:prod",
    "start:payments": "pnpm --filter payment-service run start:prod",
    
    "db:migrate": "pnpm exec prisma migrate dev --schema=./backend/libs/database/prisma/schema.prisma",
    "db:migrate:prod": "pnpm exec prisma migrate deploy --schema=./backend/libs/database/prisma/schema.prisma",
    "db:generate": "pnpm exec prisma generate --schema=./backend/libs/database/prisma/schema.prisma",
    "db:reset": "pnpm exec prisma migrate reset --schema=./backend/libs/database/prisma/schema.prisma",
    "db:seed": "pnpm exec prisma db seed --schema=./backend/libs/database/prisma/schema.prisma",
    "db:studio": "pnpm exec prisma studio --schema=./backend/libs/database/prisma/schema.prisma",
    "db:push": "pnpm exec prisma db push --schema=./backend/libs/database/prisma/schema.prisma",
    
    "test": "pnpm -r run test",
    "test:auth": "pnpm --filter auth-service run test",
    "test:gyms": "pnpm --filter gym-management-service run test",
    "test:payments": "pnpm --filter payment-service run test",
    "test:gateway": "pnpm --filter api-gateway run test",
    "test:e2e": "pnpm -r run test:e2e",
    "test:cov": "pnpm -r run test:cov",
    
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint --fix",
    "format": "pnpm -r run format",
    "format:check": "pnpm -r run format:check",
    
    "install:all": "pnpm install && pnpm -r install",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "clean:deps": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "reinstall": "pnpm clean:deps && pnpm install:all",
    
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    
    "health": "node scripts/health-check.js",
    "check:services": "concurrently \"curl -f http://localhost:3000/health\" \"curl -f http://localhost:3001/auth\" \"curl -f http://localhost:3002/gyms/health\" \"curl -f http://localhost:3003/payments/health\"",
    
    "dev:backend": "concurrently --kill-others-on-fail \"pnpm dev:gateway\" \"pnpm dev:auth\" \"pnpm dev:gyms\" \"pnpm dev:payments\"",
    "dev:services": "pnpm dev:backend",
    "dev:full": "pnpm dev:all",
    
    "postinstall": "pnpm db:generate",
    "precommit": "pnpm lint && pnpm test",
    "prepare": "husky install || true"
  },
  "keywords": [
    "gym",
    "fitness",
    "management",
    "microservices",
    "nestjs",
    "react",
    "typescript",
    "supabase"
  ],
  "author": "Tu Nombre",
  "license": "ISC",
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "prisma": "^6.9.0",
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "@prisma/client": "^6.9.0"
    }
  }
}
