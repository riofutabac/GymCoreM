    },
    {
      "name": "Ping Arduino",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/ping",
          "host": ["{{baseUrl}}"],
          "path": ["ping"]
        },
        "description": "Enviar comando PING al Arduino para probar la comunicación serial"
      },
      "response": [
        {
          "name": "Success Response",
          "originalRequest": {
            "method": "GET",
            "header": [],
