{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* ---------- salida ---------- */
    "outDir": "./dist",
    "noEmit": false,

    /* ---------- desactivamos declaraciones ---------- */
    "declaration": false,   // ⬅️  LA CLAVE

    /* opcional (puedes dejarlo) */
    "allowJs": true
  },

  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts",
    "coverage",
    "prisma/generated/**"    // opcional, pero ya no estorba
  ]
}
