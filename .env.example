# Configuración de Base de Datos
DATABASE_URL="postgresql://user:password@localhost:5432/gymcore_db"
DIRECT_URL="postgresql://user:password@localhost:5432/gymcore_db"

# Auth Service - Supabase
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Comunicación entre Microservicios
AUTH_SERVICE_URL="tcp://localhost:3001"
GYM_SERVICE_URL="tcp://localhost:3002"
PAYMENT_SERVICE_URL="tcp://localhost:3003"

# RabbitMQ
MESSAGE_BUS_URL="amqp://localhost:5672"

# PayPal
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_WEBHOOK_ID="your-webhook-id"
PAYPAL_SKIP_SIGNATURE="true"  # Solo para desarrollo - usar "false" en producción

# Frontend
FRONTEND_URL="http://localhost:3001"

# Environment
NODE_ENV="development"  # development | production

# Email Service (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourapp.com"

# JWT
JWT_SECRET="your-super-secret-jwt-key"
JWT_EXPIRES_IN="7d"

# Redis (opcional para caché)
REDIS_URL="redis://localhost:6379"

# Logging
LOG_LEVEL="debug"  # error | warn | info | debug
